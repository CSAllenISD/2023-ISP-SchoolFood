                .hero-figure-box.hero-figure-box-02(data-rotation='-45deg')
                | 
                .hero-figure-box.hero-figure-box-03(data-rotation='0deg')
                | 
                .hero-figure-box.hero-figure-box-04(data-rotation='-135deg')
                | 
                .hero-figure-box.hero-figure-box-05
                | 
                .hero-figure-box.hero-figure-box-06
                | 
                .hero-figure-box.hero-figure-box-07
                | 
                .hero-figure-box.hero-figure-box-08(data-rotation='-22deg')
                | 
                .hero-figure-box.hero-figure-box-09(data-rotation='-52deg')
                | 
                .hero-figure-box.hero-figure-box-10(data-rotation='-50deg')
        | 
        section.display
      footer.site-footer
        .container
          .site-footer-inner
            .brand.footer-brand
              a(href='./')
                img.header-logo-image(src='images/logo.png', width='48', height='48', style="border-radius: 50%;", alt='Logo')            |                     
            ul.footer-links.list-reset
              li
