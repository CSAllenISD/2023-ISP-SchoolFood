    script(src='https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js')
  body.is-boxed.has-animations
    .body-wrap
      header.site-header
        .container
          .site-header-inner
            .brand.header-brand
              h1.m-0
                a(href='./')
                  img.header-logo-image(src='images/logo.png', width='64', height='64', style="border-radius: 50%;", alt='Logo')
      
      div.side-popup
        h1.popup-icon âœ“
        h1.popup-title #{title} 
        img.popup-footer(src='images/logo.png', alt='Logo', width='70', height='70')
      main
        section.hero
          .container
              .hero-figure.anime-element
                svg.placeholder(width='528', height='396', viewBox='0 0 528 396')
                  rect(width='528', height='396', style='fill:transparent;')
